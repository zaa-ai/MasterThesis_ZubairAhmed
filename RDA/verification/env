#!/bin/csh

##------------------------------------------------
## Project Environment
##------------------------------------------------

if ( ! $?WRK_USER_DIR ) then
  setenv WRK_USER_DIR "/nfs/wrk.$USER"
endif
setenv PROJECT_DIR "$WRK_USER_DIR/projekte/52144/main/design"
setenv DESIGN      "$WRK_USER_DIR/projekte/52144/sos/main/ANALOG"

##---------

setenv SPSCR_COMMON "$WRK_USER_DIR/projekte/designflow/spice-script/spscr_sim/v1"
setenv SPSCR_PRJ    "$PROJECT_DIR/verification"
setenv SPSCR_SIMDIR "$WRK_USER_DIR/sim/52144"
  
##---------

source $SPSCR_COMMON/env

##------------------------------------------------
## Analog
##------------------------------------------------

setenv PARAM_USE_TSMC 1
  
##---------

setenv DESIGNKIT_TSMC "/common/run/synopsys/pdk/baukau/0.9.1/hspice"
setenv DESIGNLIB_TSMC "$DESIGNKIT_TSMC/c018bcd_gen2_latest_usage.l"

##---------

setenv SPSCR_SOA 1

##------------------------------------------------
## Digital
##------------------------------------------------

setenv SPSCR_SIMDIRDIG     "dsi3_crm"
setenv SPSCR_SIMDIRDIG_LAY "dsi3_crm_lay_digtop_signoff"
  
##---------

setenv SDF_MODULE   "snps_sptop/xdut/xdigi"
setenv SDF_FILEPATH "$PROJECT_DIR/DIGITAL/be_run/signoff/results"

##---------

setenv SPSCR_SDF 0
#setenv SPSCR_SDF 1

##---------

setenv SPSCR_SDF_CMD "min:${SDF_MODULE}:${SDF_FILEPATH}/digtop.func_min.signoff.sdf.gz +neg_tchk +sdfverbose"
#setenv SPSCR_SDF_CMD "max:${SDF_MODULE}:${SDF_FILEPATH}/digtop.func_max.signoff.sdf.gz +neg_tchk +sdfverbose"
#setenv SPSCR_SDF_CMD "min:${SDF_MODULE}:${SDF_FILEPATH}/digtop.scan_min.signoff.sdf.gz +neg_tchk +sdfverbose"
#setenv SPSCR_SDF_CMD "max:${SDF_MODULE}:${SDF_FILEPATH}/digtop.scan_max.signoff.sdf.gz +neg_tchk +sdfverbose"

##------------------------------------------------
## Software
##------------------------------------------------

#setenv SPSCR_ROM_SW "$SPSCR_PRJ/digtop_sw/sys_rom.xdat"
#setenv SPSCR_ROM_SW "$SPSCR_PRJ/digtop_sw/sys_rom.20200720.xdat"
  
##---------

setenv SPSCR_FLASH_SW "$SPSCR_PRJ/digtop_sw/appl_cpu0.c"

##------------------------------------------------
## Defaults
##------------------------------------------------

setenv SPSCR_SIMULATOR "HSPICE"
setenv SPSCR_SIMFLOW "ANA"
  
##---------

if ( ! $?IC_VER ) then
  setenv IC_VER "MAIN"
endif
  
##---------

if ( ! $?IC_REF ) then
  setenv IC_REF "M52143A"
endif

##------------------------------------------------
##------------------------------------------------
